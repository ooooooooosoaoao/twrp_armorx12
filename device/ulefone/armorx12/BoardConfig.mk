# BoardConfig for Ulefone Armor X12 (MT6765 - Helio P35)

TARGET_BOARD_PLATFORM := mt6765
TARGET_BOOTLOADER_BOARD_NAME := mt6765

# Kernel prebuilt (estratto dal boot.img)
TARGET_PREBUILT_KERNEL := device/ulefone/armorx12/kernel/zImage

# Partition sizes (da scatter.txt)
BOARD_BOOTIMAGE_PARTITION_SIZE := 33554432        # 0x2000000
BOARD_RECOVERYIMAGE_PARTITION_SIZE := 33554432    # stimato come boot
BOARD_DTBOIMG_PARTITION_SIZE := 8388608           # 0x800000
BOARD_VENDOR_BOOTIMAGE_PARTITION_SIZE := 67108864 # 0x4000000
BOARD_USERDATAIMAGE_PARTITION_SIZE := 3221225472  # 0xc0000000 approx
BOARD_SUPER_PARTITION_SIZE := 8770846720          # 0x20c0c4000

BOARD_FLASH_BLOCK_SIZE := 131072

# Recovery
TARGET_RECOVERY_FSTAB := device/ulefone/armorx12/recovery.fstab
BOARD_HAS_NO_REAL_SDCARD := true
